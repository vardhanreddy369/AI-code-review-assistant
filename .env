# Environment Configuration for AI Code Review Assistant

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
ENV=development
DEBUG=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Database
DATABASE_URL=postgresql://code_review:password@localhost/code_review_db

# Redis Cache
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# ML Service
ML_SERVICE_URL=http://localhost:8001
ML_MODEL_NAME=code-review-base
BATCH_SIZE=32

# GitHub Integration
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret
GITHUB_APP_ID=
GITHUB_PRIVATE_KEY=

# GitLab Integration
GITLAB_TOKEN=your_gitlab_personal_access_token
GITLAB_WEBHOOK_SECRET=your_gitlab_webhook_secret
GITLAB_URL=https://gitlab.com

# Bitbucket Integration
BITBUCKET_TOKEN=your_bitbucket_oauth_token
BITBUCKET_WEBHOOK_SECRET=your_bitbucket_webhook_secret

# Security
JWT_SECRET=your_super_secret_key_change_this_in_production
JWT_ALGORITHM=HS256
TOKEN_EXPIRY_MINUTES=60

# Analysis Configuration
MAX_FILES_PER_PR=100
MAX_FILE_SIZE_MB=1
ANALYSIS_TIMEOUT_SECONDS=300

# Celery
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379

# Logging
LOG_LEVEL=INFO

# Frontend
REACT_APP_API_URL=http://localhost:8000/api/v1
FRONTEND_URL=http://localhost:3000

# Webhook
WEBHOOK_TIMEOUT_SECONDS=30
WEBHOOK_RETRY_ATTEMPTS=3
